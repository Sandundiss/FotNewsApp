<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FOTNewsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/black</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/dark_gray</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>

        <!-- Material components -->
        <item name="materialButtonStyle">@style/Widget.FOTNewsApp.Button</item>
        <item name="bottomAppBarStyle">@style/Widget.FOTNewsApp.BottomAppBar</item>
    </style>

    <style name="Theme.FOTNewsApp" parent="Base.Theme.FOTNewsApp" />

    <!-- Custom component styles -->
    <style name="Widget.FOTNewsApp.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.FOTNewsApp.BottomAppBar" parent="Widget.Material3.BottomAppBar">
        <item name="android:background">@color/black</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.FOTNewsApp.BottomAppBar</item>
    </style>

    <style name="ThemeOverlay.FOTNewsApp.BottomAppBar" parent="">
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/black</item>
    </style>

</resources>